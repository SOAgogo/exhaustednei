              input#attribute2.form-control.attribute-input[type="number" value="0.1" min="0" max="1" step="0.05"]
            .form-check
              label.form-check-label[for="sterilized"]
                |  Sterilized 
              input#attribute3.form-control.attribute-input[type="number" value="0.1" min="0" max="1" step="0.05"]
            .form-check
