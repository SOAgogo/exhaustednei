    title
      | Attribute Counter
    style
      |  .attribute-container { display: flex; justify-content: space-between; margin-bottom: 1rem; } 
  body
    .container
      .row
        .col-12
          #attributeContainer.attribute-container
            .form-check
              label.form-check-label[for="address"]
                |  Address
              input#attribute1.form-control.attribute-input[type="number" value="0.1" min="0" max="1" step="0.05"]
            .form-check
              label.form-check-label[for="age"]
